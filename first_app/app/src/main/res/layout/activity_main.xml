<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text=""
            android:id="@+id/days"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="105dp" android:layout_marginStart="105dp" android:layout_marginTop="88dp"
            app:layout_constraintTop_toBottomOf="@+id/yob" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="106dp" android:layout_marginRight="106dp" android:layout_marginBottom="117dp"
            app:layout_constraintBottom_toTopOf="@+id/calculate"/>
    <Button
            android:text="Button"
            android:layout_width="100dp"
            android:layout_height="50dp" android:id="@+id/calculate"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="205dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="118dp" android:layout_marginStart="118dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="127dp"
            android:layout_marginRight="127dp" android:layout_marginTop="184dp"
            app:layout_constraintTop_toBottomOf="@+id/yob"
            android:onClick="buttonClicked"/>
    <EditText
            android:layout_width="249dp"
            android:layout_height="58dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/yob"
            android:text="Enter you DOB (dd/mm/yyyy)"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="99dp" android:layout_marginStart="99dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="99dp" android:layout_marginRight="99dp"
            app:layout_constraintHorizontal_bias="0.272" android:layout_marginTop="248dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="145dp"
            app:layout_constraintBottom_toTopOf="@+id/calculate"/>

</androidx.constraintlayout.widget.ConstraintLayout>