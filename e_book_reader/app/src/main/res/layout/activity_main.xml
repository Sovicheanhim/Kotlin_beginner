<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">
    <ViewFlipper
            android:layout_width="match_parent"
            android:layout_height="500dp"
    >
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/test_wallpaper_01"
        />
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/test_wallpaper_02"
        />
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/test_wallpaper_03"
        />
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/test_wallpaper_04"
        />
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/test_wallpaper_05"
        />
    </ViewFlipper>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:id ="@+id/backButton"
            android:onClick="buttonClick"
        />
        <EditText
                android:layout_marginLeft="100dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/pageNumber"
        />
        <Button
                android:layout_width="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_height="wrap_content"
                android:text="Next"
                android:id="@+id/nextButton"
                android:onClick="buttonClick"
        />
    </LinearLayout>

</LinearLayout>