<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/days">

    <EditText
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:text="GG-father"
            android:ems="10"
            android:id="@+id/gg_father"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="170dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp" app:layout_constraintEnd_toStartOf="@+id/g_father"
            android:layout_marginEnd="37dp" android:layout_marginRight="37dp"
            app:layout_constraintTop_toBottomOf="@+id/dob"/>
    <EditText
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:text="G-father"
            android:ems="10"
            android:id="@+id/g_father"
            app:layout_constraintStart_toEndOf="@+id/gg_father" android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp" android:layout_marginTop="65dp"
            app:layout_constraintTop_toBottomOf="@+id/dob" app:layout_constraintEnd_toStartOf="@+id/g_mother"
            android:layout_marginEnd="29dp" android:layout_marginRight="29dp"
            app:layout_constraintBottom_toTopOf="@+id/calculate"/>
    <EditText
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:text="G-mother"
            android:ems="10"
            android:id="@+id/g_mother"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="170dp"
            app:layout_constraintStart_toEndOf="@+id/g_father" android:layout_marginLeft="29dp"
            android:layout_marginStart="29dp" android:layout_marginTop="45dp"
            app:layout_constraintTop_toBottomOf="@+id/dob" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="31dp" android:layout_marginRight="31dp"/>
    <TextView
            android:text="Predicted days left"
            android:layout_width="278dp"
            android:layout_height="78dp"
            android:id="@+id/predicted_days" android:textSize="32sp"
            android:layout_marginBottom="62dp" app:layout_constraintBottom_toTopOf="@+id/display"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="66dp"
            android:layout_marginStart="66dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="67dp"
            android:layout_marginRight="67dp" android:layout_marginTop="156dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Calculate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/calculate" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="161dp"
            android:layout_marginStart="161dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="148dp" android:layout_marginRight="148dp" android:layout_marginBottom="86dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/g_father"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Your DOB (dd/mm/yyyy)"
            android:ems="10"
            android:id="@+id/dob" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="99dp" android:layout_marginStart="99dp" android:layout_marginTop="72dp"
            app:layout_constraintTop_toBottomOf="@+id/display" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="99dp" android:layout_marginRight="99dp" android:layout_marginBottom="44dp"
            app:layout_constraintBottom_toTopOf="@+id/gg_father"/>
    <TextView
            android:layout_width="259dp"
            android:layout_height="59dp"
            android:textSize="36dp"
            android:id="@+id/display"
            app:layout_constraintBottom_toTopOf="@+id/dob" app:layout_constraintEnd_toStartOf="@+id/predicted_days"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="250dp" android:layout_marginLeft="360dp" android:layout_marginStart="360dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>